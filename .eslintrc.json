{
  "root": true,
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": ["error", "always"],
    "no-trailing-spaces": "error"
  },
  "ignorePatterns": [
    "src/**/*.test.ts"
  ]
}